<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.harry.multimodalsensing.MainActivity">

    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Hello World!" />-->

    <TextView
        android:id="@+id/AccelXcoordView"
        android:text="Accel X"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sensorview_text_size"
        />

    <TextView
        android:id="@+id/AccelYcoordView"
        android:text="Accel Y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sensorview_text_size"
        android:layout_below="@id/AccelXcoordView"
        />

    <TextView
        android:id="@+id/AccelZcoordView"
        android:text="Accel Z"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sensorview_text_size"
        android:layout_below="@id/AccelYcoordView"
        />

    <TextView
        android:id="@+id/GyroXcoordView"
        android:text="Gyro X"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sensorview_text_size"
        android:layout_below="@id/AccelZcoordView"
        />

    <TextView
        android:id="@+id/GyroYcoordView"
        android:text="Gyro Y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sensorview_text_size"
        android:layout_below="@id/GyroXcoordView"
        />

    <TextView
        android:id="@+id/GyroZcoordView"
        android:text="Gyro Z"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sensorview_text_size"
        android:layout_below="@id/GyroYcoordView"
        />

    <TextView
        android:id="@+id/MagnetXcoordView"
        android:text="Magnet X"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sensorview_text_size"
        android:layout_below="@id/GyroZcoordView"
        />

    <TextView
        android:id="@+id/MagnetYcoordView"
        android:text="Magnet Y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sensorview_text_size"
        android:layout_below="@id/MagnetXcoordView"
        />

    <TextView
        android:id="@+id/MagnetZcoordView"
        android:text="Magnet Z"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sensorview_text_size"
        android:layout_below="@id/MagnetYcoordView"
        />

    <TextView
        android:id="@+id/LightcoordView"
        android:text="Light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sensorview_text_size"
        android:layout_below="@id/MagnetZcoordView"
        />

    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/button_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:onClick="stopButtonClick"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/stopbutton_size"
        android:layout_below="@+id/LightcoordView"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
